<%= form_for @changeset, @action, [class: "uk-form-stacked"], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
  <%= inputs_for f, :user, fn fp -> %>
    <div class="uk-margin">
      <%= label fp, :name, "Nome",class: "uk-form-label" %>
      <div class="uk-form-controls">
        <%= text_input fp, :name, class: "uk-input" %>
      </div>
      <%= error_tag fp, :name %>
    </div>
    <div class="uk-margin">
      <%= label fp, :email, "Nome de usuÃ¡rio",class: "uk-form-label" %>
      <div class="uk-form-controls">
        <%= text_input fp, :email, class: "uk-input" %>
      </div>
      <%= error_tag fp, :email %>
    </div>
    <div class="uk-margin">
      <%= label fp, :password, "Senha para acesso",class: "uk-form-label" %>
      <div class="uk-form-controls">
        <%= password_input fp, :password, value: "", class: "uk-input" %>
      </div>
    </div>
  <% end %>
  <div>
    <span><%= link "Cancelar", to: Routes.collaborator_path(@conn, :index), class: "uk-button uk-button-danger" %></span>
    <%= submit "Salvar", class: "uk-button uk-button-primary" %>
  </div>
<% end %>
