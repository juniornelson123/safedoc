<div class="uk-flex uk-flex-between">
  <h1 class="uk-text-lead">Etiquetas</h1>
  <span>
    <%= link to: Routes.container_path(@conn, :new), class: "uk-button uk-button-primary uk-flex uk-flex-middle" do %>
      <span uk-icon="plus" class="uk-margin-small-right"></span>
      Novo
    <% end %>
  </span>
</div>

<table class="uk-table uk-table-hover uk-table-center uk-table-middle uk-table-divider uk-table-separate" cellspacing="10">
  <thead>
    <tr>
      <th>ID</th>
      <th>CÃ³digo</th>
      <th>Tipo</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <%= for container <- @containers do %>
    <tr>
      <td><%= container.id %></td>
      <td><%= container.code %></td>
      <td><%= container.category.name %></td>
      <td>
        <span><%= link "Imprimir", to: Routes.container_path(@conn, :show, container), class: "uk-button uk-button-primary", target: "_blank" %></span>
        <span><%= link "Editar", to: Routes.container_path(@conn, :edit, container), class: "uk-button uk-button-secondary" %></span>
        <span><%= link "Deletar", to: Routes.container_path(@conn, :delete, container), method: :delete, data: [confirm: "Deseja Realmente Deletar?"], class: "uk-button uk-button-danger" %></span>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
